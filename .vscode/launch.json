    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "--recursive",
          "-t",
          "600000",
          "-s",
          "1000",
          "${workspaceFolder}/test"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      },
      {
          "type": "node",
          "request": "launch",
          "name": "FULLNODE",
          "program": "${workspaceFolder}/index.js",
          "outputCapture": "std",
          "args": [                
            //"--prefix=./.gamegold/testnet2",
            //"--port-offset=50",
            "--debug",
            "--genesis",
            "--network=testnet"
          ],
          "skipFiles": [
            "${workspaceFolder}/node_modules/**/*.js",
            "<node_internals>/**/*.js"
          ]
      },
      {
          "type": "node",
          "request": "launch",
          "name": "CLI Test",
          "program": "${workspaceFolder}/bin/cli",
          "args": [
              "block.tips",
              "--network=testnet"
          ],
          "skipFiles": [
            "${workspaceFolder}/node_modules/**/*.js",
            "<node_internals>/**/*.js"
          ]
      }
  ]
}